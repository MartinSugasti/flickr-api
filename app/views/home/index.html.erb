<%= form_with url: root_path, method: :get, local: true do |form| %>
  <div>
    <%= form.text_field :user_id %>
  </div>

  <%= form.submit "Find user's photos" %>
<% end %>

<%= form_with url: root_path, method: :get, local: true do |form| %>
  <div>
    <%= form.text_field :tag %>
  </div>

  <%= form.submit "Find photos by tag" %>
<% end %>

<% @photos_information&.each do |photo_information| %>
  <%= image_tag "https://live.staticflickr.com/#{photo_information['server']}/#{photo_information['id']}_#{photo_information['secret']}_q.jpg" %>
<% end %>
